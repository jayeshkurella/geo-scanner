pipeline {
    agent { label 'coderize2' }
    environment {
        WORKSPACE_DIR = "${WORKSPACE}/geo-scanner/scripts"
    }
    stages {
        stage ('Checkout') {
            steps {
                git branch: 'master', credentialsId: 'new-token1', url: 'https://gitlab.com/coderizers/app_view/geo-scanner.git'
                sh '''
                echo "Current Working Directory:"
                pwd
                echo "Listing Workspace Contents:"
                ls -l
                '''
            }
        }

        stage ('Setup Virtual Environment, Install Dependencies') {
            steps {
                sh '''
                chmod +x scripts/setup_virtualenv.sh
                ./scripts/setup_virtualenv.sh
                '''
            }
        }

        stage ('migration') {
            steps {
                sh '''
                chmod +x scripts/run_migration.sh
                ./scripts/run_migration.sh
                '''
            }
        }

        stage ('Setup Gunicorn') {
            steps {
                sh '''
                chmod +x scripts/gunicorn.sh
                ./scripts/gunicorn.sh
                '''
            }
        }
    }
}
