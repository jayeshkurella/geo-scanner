pipeline {
    agent any

    environment {
        VENV_DIR = "${WORKSPACE}/venv"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/jayeshkurella/geo-scanner.git'
            }
        }

        stage('Setup Virtual Environment & Dependencies') {
            steps {
                sh '''
                chmod +x scripts/setup_virtualenv.sh
                ./scripts/setup_virtualenv.sh
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                echo "Running automated tests..."
                source ${VENV_DIR}/bin/activate
                export DJANGO_SETTINGS_MODULE=Geo_Scanner.settings
                pytest --maxfail=1 --disable-warnings -q
                '''
            }
        }

        stage('Migration') {
            steps {
                sh '''
                chmod +x scripts/run_migration.sh
                ./scripts/run_migration.sh
                '''
            }
        }

        stage('Setup Gunicorn') {
            steps {
                sh '''
                chmod +x scripts/gunicorn.sh
                ./scripts/gunicorn.sh
                '''
            }
        }

        stage('Health Check & Monitoring') {
            steps {
                sh '''
                echo "Running health check on /admin/ ..."
                sleep 5
                STATUS=$(curl -o /dev/null -s -w "%{http_code}" http://127.0.0.1:5003/admin/)
                if [ "$STATUS" -ne 200 ] && [ "$STATUS" -ne 302 ]; then
                    echo "❌ Health check failed (HTTP $STATUS)"
                    exit 1
                else
                    echo "✅ Application is healthy (HTTP $STATUS)"
                fi
                '''
            }
        }
    }
}
